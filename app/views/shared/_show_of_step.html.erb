<p class="step-popup-description"><%= step.description %><p>
<% if step.photos.any?  %>
  <div class="image-popup-row">
    <% step.photos.each do |photo| %>
      <div class="image-popup-column">
        <%= cl_image_tag photo.image, crop: :fill, class: 'popup-image-item img'%>
      </div>
    <% end %>
  </div>
<% end %>

